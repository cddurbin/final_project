#form-area

  %h2 Sign up
  = form_for(resource, as: resource_name, url: registration_path(resource_name), :format => :json, :remote => true) do |f|
    = devise_error_messages!
    .field
      = f.label :first_name

      = f.text_field :first_name, autofocus: true
    .field
      = f.label :last_name

      = f.text_field :last_name

    .field
      = f.label :email

      = f.email_field :email
    .field
      = f.label :password

      = f.password_field :password, autocomplete: "off", :placeholder => '8 characters minimum'
    .field
      = f.label :password_confirmation

      = f.password_field :password_confirmation, autocomplete: "off"
    .actions
      = f.submit "Sign up", :class => 'button radius small', :id => 'devise-button'
  = render "devise/shared/links"