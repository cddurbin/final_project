.devise-form

  %h2 Sign up
  = form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:multipart => true}) do |f|
    = devise_error_messages!
    #signup-left
      .field
        = f.label :first_name

        = f.text_field :first_name, id: 'first-name'
      .field
        = f.label :last_name

        = f.text_field :last_name

      .field
        = f.label :location

        = f.text_field :location

      .field
        = f.label :ga_course, "GA Course"

        = f.text_field :ga_course, placeholder: "ex: wdi, uxdi"
    
      .field
        = f.label :role

        = f.text_field :role, placeholder: "ex: student, instructor"

      .field
        = f.label :graduate
        = f.radio_button :graduate, true
        = f.label :true, 'Yes'
        = f.radio_button :graduate, false
        = f.label :false, 'No'

      .field
        = f.label :image

        = f.file_field :image
        = f.hidden_field :image_cache

    #signup-right

      .field
        = f.label :email

        = f.email_field :email
      .field
        = f.label :password

        = f.password_field :password, autocomplete: "off", :placeholder => '8 characters minimum'
      .field
        = f.label :password_confirmation

        = f.password_field :password_confirmation, autocomplete: "off"

      .actions
        = f.submit "Sign up", :class => 'button', :id => 'signup-btn'
      = render "devise/shared/links"