
.row
  .small-2.columns
  .small-8.small-centered.columns
    #question-container{ value: @question.id}
    #answers-container
  .small-2.columns

%script{ id: 'question-tpl', type: 'text/x-handlebars-template'}
  %h1 {{ title }}
  %h3 {{ content }}
  .question-user
    %h4 {{ user.first_name  }}
  %button{ id: 'question-comments-btn', :data=>{:id =>'{{id}}'} } Comments
  .question-comments-container
    {{#comments}}
    .question-comment-container{ id: 'question-comment-{{ id }}'}
    %p {{ content }}
    %p {{user.first_name}} 
    {{/comments}}
  
