
.row
  .small-2.columns
  .small-8.small-centered.columns
    #question-container{ value: @question.id}
    #comments-container
    #answers-container
  .small-2.columns

%script{ id: 'question-tpl', type: 'text/x-handlebars-template'}
  .question
    %h1 {{ title }}
    %h3 {{ content }}
    %h3 {{ user.first_name  }}
  
%script{ id: 'question-comments-tpl', type: 'text/x-handlebars-template'}
  %h4 Comments
  {{#comments}}
  .comment-container{ id: 'comment-{{ id }}'}
  %p {{ content }}
  %p {{user.first_name}} 
  {{/comments}}

%script{ id: 'answers-tpl', type: 'text/x-handlebars-template'}
  %h3 Answer
  {{#answers}}
  .answer-container{ id: 'answer-{{ id }}', value: '{{ id }}'}
  %p {{ content }}
  %p {{user.first_name}}
  %button{ id: 'answer-comments-btn', :data=>{:id =>'{{id}}'} } Comments
  #answer-comments-container
    {{#comments}}
    %p {{ content }}
    %p {{ user.last_name }}
    {{/comments}}
    -# %p {{> answer-comment}} 
  {{/answers}}

