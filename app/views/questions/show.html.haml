
.row
  .small-2.columns
  .small-10.columns
    #question-container{ value: @question.id, :name => @question.user.first_name }
    #add-answer-container
      %button#add-answer-btn Help #{@question.user.first_name} Out
      #answer-editor-container
    #answers-container 

%script{ id: 'question-tpl', type: 'text/x-handlebars-template'}
  .question-title
    %h1 {{{ title }}}
  .row
    .small-6.columns
      .question-details
    .small-6.columns
      .question-user
        .question-user
          .user-image
          .ul.user-details
            %li.user-name
              %h2 {{user.first_name}}
            %li.user-course
              %h3 {{user.ga_course}}
              %h3 {{user.location}}
            %li.submit-date
              %h3 Submitted on {{created_at}}
  .question-content
    %h3 {{{ content }}}
  
  %button{ id: 'question-comments-btn', :data=>{:id =>'{{id}}'} } Comments
  .question-comments-container
    {{#comments}}
    .question-comment-container{ id: 'question-comment-{{ id }}'}
      %p {{{ content }}}
      %p {{{user.first_name}}} 
    {{/comments}}


  
