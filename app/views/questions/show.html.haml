%script{ id: 'answers-tpl', type: 'text/x-handlebars-template'}
  %h3 Answer
  {{#answers}}
  .answer-container{ id: 'answer-{{ id }}', value: '{{ id }}'}
    %p {{{ content }}}
    .answer-user
      %p {{{user.first_name}}}
  %button{ id: 'answer-comments-btn', :data=>{:id =>'{{id}}'} } Comments
  .answer-comments-container{ id: 'answer-comments-{{ id }}'}
    {{#comments}}
    .answer-comment-container{ id: 'answer-comment-{{ id }}'}
      %p {{{ content }}}
      %p {{{ user.last_name }}}
    {{/comments}}
