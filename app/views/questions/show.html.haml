//HTML

.row
  .small-2.columns
  .small-10.columns
    .row
      .small-1.columns
        .post-vote-container.question
      .small-11.columns
        .post-container.question{ value: @question.id, :name => @question.user.first_name, :data=>{:id => @question.user.id}}
        #add-answer-container
          %button#add-answer-btn Help #{@question.user.first_name} Out
          #answer-editor-container
    .row.answers-container
      
      
      

//Handlebars ----------------------------------------------

//Partials

%script{ id: 'user-partial', type: 'text/x-handlebars-template'}
  .row
    .small-6.columns
      .post-details.question
    .small-6.columns
      .post-signature-user.question
        .user-image
        .ul.user-details
          %li.user-name
            %h2 {{user.first_name}}
          %li.user-course
            %h3 {{user.ga_course}}
          %li.user-location
            %h3 {{user.location}}
        .submit-date
          %h3 Submitted on {{created_at}}

%script{ id: 'comment-partial', type: 'text/x-handlebars-template'}
  .row
    .small-6.columns
      .post-details.show
        %p {{{ content }}}
    .small-6.columns
      .post-signature-user.show
        %h3 By {{user.first_name}} {{user.last_name}} {{created_at}}

// Templates -----------------------------------------------------------------

%script{ id: 'question-tpl', type: 'text/x-handlebars-template'}
  .post-title.question-show
    %h1 {{{ title }}}
  %button#more-content{ value: @question.id} More
  .post-content.question
    %h3 {{{ content }}}
  .row
    .small-6.columns
      .post-details.question
    .small-6.columns
      .post-signature-user.question
        .user-image
        .ul.user-details
          %li.user-name
            %h2 {{user.first_name}}
          %li.user-course
            %h3 {{user.ga_course}}
          %li.user-location
            %h3 {{user.location}}
        .action-time
          %h3 {{updated_at}}
  {{#if comments}}
  %button{ id: 'question-comments-btn', :data=>{:id =>'{{id}}'} } Comments
  .post-comments-container.question
    {{#comments}}
    .post-comment-container.question{ id: 'question-comment-{{ id }}'}
      {{> comment}}
    {{/comments}}
  {{/if}}



%script{ id: 'answers-tpl', type: 'text/x-handlebars-template'}
  {{#if accepted_answer}}
  .answers-heading
    %h3 {{acceptedAnswerTotal sorted_answers}}
  .small-1.columns
    .post-vote-container.answer
      .stat-box.helpful
        .helpful-total{id: 'accepted-total'}
          %h3 
        %button{id: 'helpful', value: "{{id}}"} Helpful
        %button{id: 'unhelpful'} Unhelpful
      .accepted-selector
        %p Accepted
  .small-11.columns
    .post-container.answer{ id: 'answer-{{ id }}'}
      %p {{{ content }}}
      .post-signature-user.answer
        {{> user }}
      {{#if comments}}
    %button{ id: 'answer-comments-btn', :data=>{:id =>'{{id}}'} } Comments
    .post-comments-container.answer{ id: 'answer-comments-{{ id }}'}
      {{#comments}}
      .post-comment-container.anwer{ id: 'answer-comment-{{ id }}'}
        {{> comment}}
      {{/comments}}
      {{/if}}
  {{else}}
  .answers-heading
    %h3 {{answerTotal sorted_answers}}
  {{/if}}
  {{#sorted_answers}}
  .small-1.columns
    .post-vote-container.answer
      {{> answer-voting}}
      .accepted-selector
  .small-11.columns
    .post-container.answer{ id: 'answer-{{ id }}', :data=>{:id =>'{{id}}'}}
      %p {{{ content }}}
      .post-signature-user.answer
        {{> user }}
      {{#if comments}}
    %button{ id: 'answer-comments-btn', :data=>{:id =>'{{id}}'} } Comments
    .post-comments-container.answer{ id: 'answer-comments-{{ id }}'}
      {{#comments}}
      .post-comment-container.anwer{ id: 'answer-comment-{{ id }}'}
        {{> comment}}
      {{/comments}}
      {{/if}} 
  {{/sorted_answers}}

%script{ id: 'question-voting-tpl', type: 'text/x-handlebars-template'}
  .stat-box.want-answer
    .want-answer-total{id: "{{id}}"}
      %h3 {{voteTotal votes}}
    %button{id: 'want-answer'} Want Answer
  .watch-selector

%script{ id: 'answer-voting-partial', type: 'text/x-handlebars-template'}
  .stat-box.helpful
    .helpful-total
      %h3 {{voteTotal votes}}
    %button{id: 'helpful', value: "{{id}}"} Helpful
    %button{id: 'unhelpful', value: "{{id}}"} Unhelpful

      

