.form
  .new-question-form
    = form_for @question do |f|
      -# = f.hidden_field :user_id, current_user.id
      .form.title
        = f.label :title
        = f.text_field :title
      .form.content
        = f.cktext_area :content, rows: 10
      .form.tags
        = f.label :tag_list, 'Add Tags'
        = f.text_field :tag_list, :placeholder => "comma separated"
      .form.btn
        = f.submit 'Submit Question', class: 'button submit-question'

